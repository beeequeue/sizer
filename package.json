{
  "name": "@beequeue/sizer",
  "type": "module",
  "version": "2.1.0",
  "author": "BeeeQueue <adam@haglund.dev>",
  "license": "MIT",
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=20"
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged"
  },
  "nano-staged": {
    "*.{js,jsx,ts,tsx,json,json5,yaml,yml,css,scss,md}": [
      "prettier --write"
    ]
  },
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "bin": {
    "sizer": "dist/cli.cjs"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "4.13.2",
    "@changesets/changelog-github": "1.0.0-next.0",
    "@changesets/cli": "3.0.0-next.0",
    "@tsconfig/node22": "22.0.2",
    "@tsconfig/strictest": "2.0.5",
    "@types/bytes": "3.1.5",
    "@types/node": "22.15.29",
    "bytes": "3.1.2",
    "empathic": "1.1.0",
    "eslint": "9.28.0",
    "nano-staged": "0.8.0",
    "postject": "1.0.0-alpha.6",
    "prettier": "3.5.3",
    "publint": "0.3.12",
    "sade": "1.8.1",
    "simple-git-hooks": "2.13.0",
    "tinyexec": "1.0.1",
    "tinyglobby": "0.2.14",
    "tinywhich": "0.1.2",
    "tsdown": "0.12.5",
    "typescript": "5.8.3",
    "unplugin": "2.3.5"
  }
}
